<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <Button
        android:id="@+id/button1"
        android:layout_width="59dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/charger"
        android:onClick="Charger"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/textView_charge"
        android:layout_width="171dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="33dp"
        android:text="@string/textView_charge"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/button2"
        android:layout_width="75dp"
        android:layout_height="50dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="-66dp"
        android:layout_marginTop="191dp"
        android:layout_toRightOf="@id/button1"
        android:background="@drawable/recipe"
        android:onClick="Recipe"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/textView_menu"
        android:layout_width="169dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="34dp"
        android:text="@string/textView_menu"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/button3"
        android:layout_width="54dp"
        android:layout_height="88dp"
        android:layout_below="@id/button1"

        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="121dp"
        android:background="@drawable/currency"
        android:onClick="Currency"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/textView_currency"
        android:layout_width="171dp"
        android:layout_height="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="32dp"
        android:text="@string/textView_currency"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/button4"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_alignParentStart="true"

        android:layout_centerVertical="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/news"
        android:onClick="News"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/textView_news"
        android:layout_width="186dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="12dp"
        android:text="@string/textView_news"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

</RelativeLayout>